# Production Environment Configuration
# WARNING: This file contains sensitive information. Never commit to version control.

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Production)
DATABASE_URL=postgresql://wedding_user:${DB_PASSWORD}@${DB_HOST}:5432/wedding_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (Production)
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
REDIS_POOL_SIZE=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Security (Production)
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours for production
ALGORITHM=HS256

# HTTPS and Cookie Security (Production)
SECURE_COOKIES=true
COOKIE_SAMESITE=strict
COOKIE_HTTPONLY=true
COOKIE_SECURE=true

# Session Security (Production)
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# CORS (Production)
ALLOWED_ORIGINS=https://wedhabesha.com,https://www.wedhabesha.com,https://api.wedhabesha.com
ALLOWED_HOSTS=wedhabesha.com,www.wedhabesha.com,api.wedhabesha.com

# Firebase Configuration (Production)
FIREBASE_PROJECT_ID=wedhabesha
FIREBASE_PRIVATE_KEY_ID=${FIREBASE_PRIVATE_KEY_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}
FIREBASE_CLIENT_ID=${FIREBASE_CLIENT_ID}
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# External Services (Production)
WHATSAPP_API_URL=${WHATSAPP_API_URL}
WHATSAPP_API_TOKEN=${WHATSAPP_API_TOKEN}
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Email Configuration (Production)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_USE_TLS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/wedding-platform/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
SENTRY_DSN=${SENTRY_DSN}

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_ACCESS_KEY=${BACKUP_S3_ACCESS_KEY}
BACKUP_S3_SECRET_KEY=${BACKUP_S3_SECRET_KEY}